<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h1>Update a Task</h1>
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <div>
            <label for="title">Write a Title</label>
            <div class="mb-3">
              <input
                type="text"
                name="title"
                placeholder="title"
                id="title"
                value="{{task.title}}"
                class="form-control rounded-0 bg-dark text-white"
              />
            </div>
          </div>
          <div>
            <label for="description">Description</label>
            <div class="mb-3">
              <textarea
                name="description"
                placeholder="description"
                id="description"
                rows="3"
                class="form-control rounded-0 bg-dark text-white"
              >{{task.description}}</textarea>
            </div>
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>